
<h1> Zone in Booking <%= @booking.id %> made by <%= @booking.name %> </h1>
<p>
    <b> Zone details: </b>
    <%= @zone.name %> -
    <%= @zone.description %>
</p>
<% if user_signed_in? && current_user.admin?%>
<%= link_to 'Edit', edit_booking_zone_path(@booking, @zone), class: 'btn btn-warning' %>
<% end %>
<%= link_to '<< Back to all zones', booking_zones_path(@booking), class: 'btn btn-success' %>
