<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Address</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.firstname %></td>
        <td><%= profile.lastname %></td>
        <td><%= profile.address %></td>
        
        <td><%= link_to 'Show', profile, class: 'btn btn-info'%></td>
        <td><%= link_to 'Edit', edit_profile_path(profile), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path, class:'btn btn-success'%>
