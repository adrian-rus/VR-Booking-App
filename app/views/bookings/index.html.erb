<p id="notice"><%= notice %></p>

<h1>Listing Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Arrival Time</th>
      <th>Duration</th>
      <th>Description</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr class="<%= cycle('list_line_odd','list_line_even')%>">
        <td><%= booking.date %></td>
        <td><%= booking.time %></td>
        <td><%= booking.duration %> hour/s</td>
        <td><%= booking.description %></td>
        <td><%= booking.cost %></td>
        <td><%= link_to 'Show booking', booking %></td>
        <td><%= link_to 'Amend booking', edit_booking_path(booking) %></td>
        <td><%= link_to 'Cancel booking', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

