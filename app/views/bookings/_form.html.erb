<%= form_for(@booking, class: 'form-horizontal') do |f| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% @booking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group row">
    <%= f.label :date, class: 'col-sm-2 control-label'%>
    <div class="col-sm-10">
      <%= f.date_select :date, class: 'form-control' %>
    </div>
  </div>
  
  <div class="field form-group row">
    <%= f.label :time, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
        <%= f.time_select :time, class: 'form-control' %>
    </div>
  </div>
    
  </div>
  <div class="field form-group">
    <%= f.label :duration, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :duration, class: 'form-control' %>
    </div>
  </div>
  
  <div class="field form-group">
    <%= f.label :description, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    
  </div>
  <div class="field form-group">
    <%= f.label :cost, class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :cost, class: 'form-control' %>
    </div>
  </div>
  
  <div class="field form-group col-sm-offset-2 col-sm-10">
    Zone A - Action
    <%= check_box_tag 'booking[actionZone]', 'actionZone' %>
  </div>
  
 <div class="field form-group col-sm-offset-2 col-sm-10">
    Zone B - Adventure
    <%= check_box_tag 'booking[adventure]', 'adventure' %>
  </div>
  
  <div class="field form-group col-sm-offset-2 col-sm-10">
    Zone C - Multiplayer
    <%= check_box_tag 'booking[multiplayer]', 'multiplayer' %>
  </div>
  
  <div class="field form-group col-sm-offset-2 col-sm-10">
    Zone D - Sports
    <%= check_box_tag 'booking[sports]', 'sports' %>
  </div>
  
  <div class="actions">
    <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit %>
    </div>
  </div>
<% end %>
